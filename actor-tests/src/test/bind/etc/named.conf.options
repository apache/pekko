options {
    directory "/var/cache/bind";
    dnssec-validation no;
    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6 { any; };
    max-cache-size 90%;
    response-policy { zone "rpz"; };
    forwarders {
        8.8.8.8;
    };
    recursion yes;
    allow-recursion {
        any;
    };
};
